#!/bin/bash

tmpDir='tmpDir'

testExe() {
	printTestMsgHeader "$1"
	eval "$1"
	echo
}

printTestMsgHeader() {
	printf "\033[1;34mTest:\033[0m %s\n" "$1"
}

# Test cases:

testExe 'bash ./recycle'
testExe 'bash ./recycle non-existing-file'

mkdir -p "$tmpDir"
testExe "bash ./recycle $tmpDir"
rmdir "$tmpDir"
